{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./", // Should be the root of your TypeScript files
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "../", // Set baseUrl to one directory up to include 'src'
    "paths": {
      "@/*": ["src/*"] // Map '@' to 'src' directory
    }
  },
  "include": ["**/*.ts", "**/*.d.ts"], // Include all TypeScript files in current directory
  "exclude": ["node_modules", "dist"]
}
